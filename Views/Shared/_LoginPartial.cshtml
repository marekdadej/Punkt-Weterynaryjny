@using Microsoft.AspNetCore.Identity
@using PunktWeterynaryjny.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
        <span class="me-2">Witaj, @User.Identity.Name!</span>
        <button type="submit" class="btn btn-link nav-link p-0 d-inline">Wyloguj się</button>
    </form>
}
else
{
    <a class="nav-link" asp-controller="Account" asp-action="Login">Zaloguj się</a>
    <a class="nav-link" asp-controller="Account" asp-action="Register">Rejestracja</a>
}