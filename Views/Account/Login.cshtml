@model PunktWeterynaryjny.Models.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <div class="form-group">
        <label asp-for="Email">Adres e-mail</label>
        <input asp-for="Email" class="form-control" placeholder="Wpisz adres e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Wpisz hasło" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
    </div>
    <button type="submit" class="btn btn-primary">Zaloguj się</button>
</form>

<div class="mt-3">
    <a asp-controller="Account" asp-action="ForgotPassword">Nie pamiętasz hasła?</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}