@model PunktWeterynaryjny.Models.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Register" method="post">
    <div class="form-group mb-3">
        <label asp-for="Email">Adres e-mail</label>
        <input asp-for="Email" class="form-control" placeholder="Podaj e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Podaj hasło" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword">Powtórz hasło</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Powtórz hasło" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zarejestruj się</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}