@model PunktWeterynaryjny.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetowanie hasła";
}

<h2>Resetowanie hasła</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group mb-3">
        <label asp-for="Password">Nowe hasło</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Wpisz nowe hasło" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword">Powtórz hasło</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Powtórz nowe hasło" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Zresetuj hasło</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}