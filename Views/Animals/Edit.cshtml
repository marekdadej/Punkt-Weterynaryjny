@model PunktWeterynaryjny.Models.Animal

@{
    ViewData["Title"] = "Edytuj zwierzaka";
}

<h2 class="mb-4">Edytuj zwierzaka</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">ImiÄ™ zwierzaka</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Species" class="form-label">Gatunek zwierzaka</label>
        <input asp-for="Species" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Breed" class="form-label">Rasa zwierzaka</label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="BirthDate" class="form-label">Data urodzenia</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <button type="button" class="btn btn-secondary ms-2" onclick="history.back()">Anuluj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}